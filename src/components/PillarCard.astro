---
interface Props {
  image: string;
  title: string;
  description: string;
  link: string;
}

const { image, title, description, link } = Astro.props;
---

<div
  class='group bg-white rounded-2xl overflow-hidden border border-transparent hover:border-[#074351] shadow-md hover:shadow-xl transition duration-300'>
  <div class='overflow-hidden'>
    <img
      src={image}
      alt={title}
      class='w-full h-48 object-cover transform group-hover:scale-105 transition duration-500 ease-in-out'
      loading='lazy'
    />
  </div>
  <div class='p-6'>
    <h3 class='text-xl font-bold text-[#185a69] mb-2'>{title}</h3>
    <p class='text-gray-600 mb-4'>{description}</p>
    <a
      href={link}
      class='inline-block bg-[#248d87] text-white px-4 py-2 rounded-lg text-sm hover:bg-[#248d88ec] transition'>
      Read More
    </a>
  </div>
</div>

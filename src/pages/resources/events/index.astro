---
import BaseLayout from '../../../layout/BaseLayout.astro';
---

<BaseLayout title='Events'>
  <main>
    <!-- Hero -->
    <section class='bg-[#248d87] text-white py-20 text-center'>
      <div class='max-w-3xl mx-auto px-4'>
        <h1 class='text-4xl text-white font-bold mb-4'>Our Events</h1>
        <p class='text-lg'>
          Explore the impactful gatherings, trainings, and outreach activities
          shaping our mission across Kenya.
        </p>
      </div>
    </section>

    <!-- Past Events Grid -->
    <section class='py-16 px-4 sm:px-8 lg:px-24 bg-white'>
      <div class='max-w-6xl mx-auto'>
        <h2 class='text-2xl font-semibold text-[#074351] mb-6 text-center'>
          Highlights from Past Events
        </h2>
        <div class='grid gap-8 sm:grid-cols-2 lg:grid-cols-3'>
          <!-- Event Card 1 -->
          <div
            class='bg-gray-50 rounded-xl overflow-hidden shadow hover:shadow-lg transition'>
            <img
              src='/img/cleaning2-min.jpg'
              alt='Community Cleanup'
              class='h-48 w-full object-cover'
            />
            <div class='p-5'>
              <h3 class='text-lg font-bold text-[#074351] mb-1'>
                Community Cleanup Drive
              </h3>
              <p class='text-sm text-gray-700 mb-3'>
                Held in Homa Bay, the cleanup promoted environmental awareness
                and civic pride.
              </p>
              <p class='text-xs text-gray-500 italic'>March 2024</p>
            </div>
          </div>

          <!-- Event Card 2 -->
          <div
            class='bg-gray-50 rounded-xl overflow-hidden shadow hover:shadow-lg transition'>
            <img
              src='/gallery/41.jpg'
              alt='Health Camp'
              class='h-48 w-full object-cover'
            />
            <div class='p-5'>
              <h3 class='text-lg font-bold text-[#074351] mb-1'>
                Free Health Camp
              </h3>
              <p class='text-sm text-gray-700 mb-3'>
                Medical outreach in rural Siaya to increase access to vital
                health services.
              </p>
              <p class='text-xs text-gray-500 italic'>August 2023</p>
            </div>
          </div>

          <!-- Add more event cards as needed -->
        </div>
      </div>
    </section>

    <!-- Upcoming Events Section (Optional / Placeholder) -->
    <section class='py-16 px-4 sm:px-8 lg:px-24 bg-[#f9fafb]'>
      <div class='max-w-4xl mx-auto text-center'>
        <h2 class='text-2xl font-semibold text-[#074351] mb-4'>
          Upcoming Events
        </h2>
        <p class='text-gray-700 mb-6'>
          We are currently planning our next impactful engagements. Stay tuned
          here or follow us on social media for real-time updates.
        </p>
        <a
          href='/about-us/contact'
          class='inline-block px-6 py-3 btn-primary rounded-md transition'>
          Contact Us for Collaborations
        </a>
      </div>
    </section>

    <!-- Call to Action -->
    <section class='bg-[#e0f2f1] py-12 text-center px-4 sm:px-8'>
      <div class='max-w-xl mx-auto'>
        <h3 class='text-2xl font-bold text-[#074351] mb-2'>
          Want to Partner on an Event?
        </h3>
        <p class='text-gray-700 mb-6'>
          ICAN welcomes partnerships with organizations and individuals who want
          to co-host or sponsor impactful community events.
        </p>
        <a
          href='/about-us/work-with-us'
          class='px-6 py-3 btn-primary rounded-md transition'>
          Work With Us
        </a>
      </div>
    </section>
  </main>
</BaseLayout>

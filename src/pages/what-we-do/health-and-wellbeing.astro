  <!-- Vision & Objectives -->
  <section class='py-16 px-6 sm:px-12 lg:px-20 bg-gray-100'>
    <div class='grid lg:grid-cols-2 gap-10 items-center'>
      <div data-aos='fade-right'>
        <h2 class='text-3xl font-bold text-[#074351] mb-4'>Our Vision</h2>
        <p class='text-gray-700 leading-relaxed'>
          To ensure that every individual in Homa Bay County has access to
          quality healthcare and the knowledge to lead a healthy lifestyle.
        </p>
        <ul class='mt-6 space-y-3 text-gray-700 list-disc list-inside'>
          <li>Increase access to primary healthcare services.</li>
          <li>Promote awareness on preventive health measures.</li>
          <li>Address HIV/AIDS, substance abuse, and maternal health.</li>
          <li>Foster community participation in health initiatives.</li>
          <li>
            Collaborate with health institutions for better service delivery.
          </li>
        </ul>
      </div>
      <img
        src='/gallery/17.jpg'
        alt='Community health outreach'
        class='w-full object-contain h-auto'
        data-aos='zoom-in'
      />
    </div>
  </section>

  <!-- Key Activities -->
  <section class='bg-[#f7fdf8] py-16 px-6 sm:px-12 lg:px-20'>
    <h2
      class='text-3xl font-bold text-[#074351] mb-10 text-center'
      data-aos='fade-up'>
      Key Activities & Strategies
    </h2>
    <div class='grid md:grid-cols-2 lg:grid-cols-3 gap-8'>
      <div
        class='p-6 bg-white rounded-xl shadow hover:shadow-lg transition'
        data-aos='flip-left'>
        <h3 class='font-semibold text-lg text-[#074351] mb-2'>
          Health Education
        </h3>
        <p class='text-gray-600'>
          Workshops, seminars, and local media campaigns on crucial health
          topics.
        </p>
      </div>
      <div
        class='p-6 bg-white rounded-xl shadow hover:shadow-lg transition'
        data-aos='flip-left'>
        <h3 class='font-semibold text-lg text-[#074351] mb-2'>
          Community Services
        </h3>
        <p class='text-gray-600'>
          Medical camps, mobile clinics, and immunization outreach in remote
          areas.
        </p>
      </div>
      <div
        class='p-6 bg-white rounded-xl shadow hover:shadow-lg transition'
        data-aos='flip-left'>
        <h3 class='font-semibold text-lg text-[#074351] mb-2'>Partnerships</h3>
        <p class='text-gray-600'>
          Collaboration with hospitals, clinics, NGOs, and health bodies.
        </p>
      </div>
      <div
        class='p-6 bg-white rounded-xl shadow hover:shadow-lg transition'
        data-aos='flip-left'>
        <h3 class='font-semibold text-lg text-[#074351] mb-2'>
          Capacity Building
        </h3>
        <p class='text-gray-600'>
          Training healthcare workers and improving skills in local clinics.
        </p>
      </div>
      <div
        class='p-6 bg-white rounded-xl shadow hover:shadow-lg transition'
        data-aos='flip-left'>
        <h3 class='font-semibold text-lg text-[#074351] mb-2'>
          Monitoring & Evaluation
        </h3>
        <p class='text-gray-600'>
          Tracking impact and addressing emerging health challenges.
        </p>
      </div>
    </div>
  </section>

  <!-- SDG Connections -->
  <section class='py-16 px-6 sm:px-12 lg:px-20 bg-white'>
    <h2
      class='text-3xl font-bold text-[#074351] mb-10 text-center'
      data-aos='fade-up'>
      Connected Sustainable Development Goals
    </h2>
    <div class='grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-5 gap-8'>
      {
        [
          {
            img: '/sdg/02.png',
            title: 'Zero Hunger',
            desc: 'Nutrition education for better health.',
          },
          {
            img: '/sdg/04.png',
            title: 'Quality Education',
            desc: 'Health awareness and training.',
          },
          {
            img: '/sdg/05.png',
            title: 'Gender Equality',
            desc: 'Maternal health & equal care access.',
          },
          {
            img: '/sdg/06.png',
            title: 'Clean Water & Sanitation',
            desc: 'Preventing waterborne diseases.',
          },
          {
            img: '/sdg/17.png',
            title: 'Partnerships for the Goals',
            desc: 'Collaborations for greater impact.',
          },
        ].map((sdg) => (
          <div
            class='text-center bg-white  shadow hover:scale-105 hover:shadow-lg transition'
            data-aos='zoom-in'>
            <img src={sdg.img} alt={sdg.title} class='w-full h-auto' />
          </div>
        ))
      }
    </div>
  </section>

  <script>
    import AOS from 'aos';
    AOS.init({ duration: 900, once: true, easing: 'ease-in-out' });
  </script>
</BaseLayout>

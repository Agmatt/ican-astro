---
import BaseLayout from '../../../layout/BaseLayout.astro';
import Breadcrumb from '../../../components/Breadcrumb.astro';

const breadcrumbItems = [
  { href: '/', label: 'Home' },
  { href: '/what-we-do', label: 'What We Do' },
  { href: '/what-we-do/projects', label: 'Projects' },
];
---

<BaseLayout title='Projects'>
  <Breadcrumb items={breadcrumbItems} />

  <section class='py-12 bg-white'>
    <div class='max-w-7xl mx-auto px-4 lg:px-8'>
      <div class='grid grid-cols-1 md:grid-cols-12 gap-8'>
        <!-- Main Content -->
        <main class='md:col-span-7 lg:col-span-8'>
          <h1 class='text-3xl md:text-4xl font-bold hist mb-6'>
            Our Stories of Transformation
          </h1>
          <p class='text-base text-gray-700 mb-4'>
            At the core of our work is a steadfast commitment to empower,
            educate, and uplift, transforming challenges into opportunities for
            growth and confidence. Here, we invite you to explore the inspiring
            narratives from our initiatives, each one a testament to the power
            of collective action and compassion.
          </p>

          <div class='my-6'>
            <img
              src='/gallery/28.jpg'
              alt='Partnership success'
              class='rounded-lg w-full object-cover'
            />
          </div>

          <p class='text-base text-gray-700 mb-4'>
